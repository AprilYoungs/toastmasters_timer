.cell
{
  /* display: flex; */
  position: relative;
  background-color: white;
}

.cell_content
{
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 12rpx;
  border: 1rpx solid #979797;
  border-radius: 10rpx;
  text-align: center;
  background-color: #D8D8D8;
  height: 100rpx;
}

.text_content
{
  font-size: 40rpx;
  font-weight: bold;
  line-height: 100rpx;
}

.remove{  
  width: 160rpx;  
  height: 100%;  
  background-color: red; 
  color: white; 
  position: absolute;  
  top: 0;  
  right: -160rpx;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
}  

.blanc{
  margin: 40rpx;
  font-size: 0.8em;
  color: gray;
}

.notice{
  text-align: center;
}

.block{
  width: 100rpx;
  height: 100rpx;
  color: green;
}

.space{
  height: 50rpx;
}